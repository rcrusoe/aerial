<p id="notice"><%= notice %></p>

<h1><%= link_to "Videos", videos_path %></h1>

<!-- Tag Cloud -->
<p>
  Categories:
  <% tag_cloud Video.tag_counts, %w{extra-small small medium large extra-large} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class + " tag" %>
  <% end %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Url</th>
      <th>Approved</th>
      <th>User</th>
      <th>tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.description %></td>
        <td><%= video.url %></td>
        <td><%= video.approved %></td>
        <td><%= video.user.id %></td>
        <td><%= raw video.tag_list.map { |t| link_to t, tag_path(t), :class => "tag" }.join('') %> </td>
        <td><%= link_to 'Show', video %></td>
        <td><%= link_to 'Edit', edit_video_path(video) %></td>
        <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path %>
